<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{HH:mm:ss.SSS} [%-16thread] %-5level %msg%n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="com.athena.kafka.connect.restproxy.HttpSourceTaskConfig" level="WARN"/>
    <logger name="com.athena.kafka.connect.restproxy.HttpSourceConnectorConfig" level="WARN"/>
</configuration>
